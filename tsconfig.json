{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "$src/*": [
        "./src/*"
      ],
      "$main/*": [
        "./src/main/*"
      ],
      "$renderer/*": [
        "./src/renderer/*"
      ],
      "$common/*": [
        "./src/common/*"
      ],
      "*": [
        "./node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./src/**/*.d.ts",
  ]
}