{
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*Classes", // Match on custom vars following the pattern fooClasses
    "classes", // Match on custom vars named classes
    "clsxm" // Utility function, clsx + twMerge
  ],
  "tailwindCSS.experimental.classRegex": [
    ["clsxm?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}